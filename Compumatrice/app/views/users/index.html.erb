<p id="notice" class= "alert alert-success" ><%= notice %></p>

<h1>Listing Users
    
    <%= link_to 'Add New User', new_user_path,class:"btn btn-primary float-right" %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.f_name %></td>
        <td><%= user.lname %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.location %></td>
        <td><%= link_to 'Edit', edit_user_path(user),class:"btn btn-success" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


